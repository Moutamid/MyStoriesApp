<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="15dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--            <View-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="15dp"/>-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/image" />

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/image" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="start"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hey there, "
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/user_name_textview_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="User name!"
                    android:textColor="@color/darkSkyBlue"
                    android:textSize="20sp"
                    android:textStyle="normal|bold|italic" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/last_chat_layout_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_gender_btn_unclicked_registration_on_board"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/wewe"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/image" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_toStartOf="@+id/qwqw"
                    android:layout_toLeftOf="@+id/qwqw"
                    android:layout_toEndOf="@+id/wewe"
                    android:layout_toRightOf="@+id/wewe"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/last_chat_textview_home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Lisa"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Begin where you left of"
                        android:textColor="@color/darkerGrey"
                        android:textSize="13sp"
                        android:textStyle="italic" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/qwqw"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:rotation="180"
                    android:src="@drawable/ic_arrow_back" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stories "
                        android:textColor="@color/darkSkyBlue"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="for you to choose"
                        android:textColor="@color/black"
                        android:textSize="22sp" />

                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/funny_btn_home"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_gender_btn_clicked_registration_on_board"
                            android:text="Funny"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/thriller_btn_home"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/bg_gender_btn_unclicked_registration_on_board"
                            android:text="Thriller"
                            android:textColor="@color/orange"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/suspense_btn_home"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/bg_gender_btn_unclicked_registration_on_board"
                            android:text="Suspense"
                            android:textColor="@color/orange"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/alien_btn_home"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/bg_gender_btn_unclicked_registration_on_board"
                            android:text="Alien"
                            android:textColor="@color/orange"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/showAllStoriesBtnChatList"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/bg_gender_btn_unclicked_registration_on_board"
                            android:text="Show All"
                            android:textColor="@color/orange"
                            android:textSize="14sp" />

                    </LinearLayout>

                </HorizontalScrollView>
                <!--margin = 10dp-->

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/john_layout_home"
                            android:layout_width="130dp"
                            android:layout_height="140dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/bg_gender_btn_clicked_registration_on_board"
                            android:onClick="HomeStoryClickedMethod"
                            android:padding="15dp"
                            android:tag="john">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="start"
                                    android:src="@drawable/image" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:layout_marginTop="10dp"
                                    android:gravity="start"
                                    android:maxLines="1"
                                    android:text="John"
                                    android:textColor="@color/white"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/alice_layout_home"
                            android:layout_width="130dp"
                            android:layout_height="140dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/bg_gender_btn_clicked_registration_on_board"
                            android:onClick="HomeStoryClickedMethod"
                            android:padding="15dp"
                            android:tag="alice">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="start"
                                    android:src="@drawable/image" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:layout_marginTop="10dp"
                                    android:gravity="start"
                                    android:maxLines="1"
                                    android:text="Alice"
                                    android:textColor="@color/white"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/charlie_layout_home"
                            android:layout_width="130dp"
                            android:layout_height="140dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/bg_gender_btn_clicked_registration_on_board"
                            android:onClick="HomeStoryClickedMethod"
                            android:padding="15dp"
                            android:tag="charlie"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="start"
                                    android:src="@drawable/image" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:layout_marginTop="10dp"
                                    android:gravity="start"
                                    android:maxLines="1"
                                    android:text="Charlie"
                                    android:textColor="@color/white"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/carl_layout_home"
                            android:layout_width="130dp"
                            android:layout_height="140dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/bg_gender_btn_clicked_registration_on_board"
                            android:onClick="HomeStoryClickedMethod"
                            android:padding="15dp"
                            android:tag="carl"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="start"
                                    android:src="@drawable/image" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:layout_marginTop="10dp"
                                    android:gravity="start"
                                    android:maxLines="1"
                                    android:text="Carl"
                                    android:textColor="@color/white"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/kathy_layout_home"
                            android:layout_width="130dp"
                            android:layout_height="140dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/bg_gender_btn_clicked_registration_on_board"
                            android:onClick="HomeStoryClickedMethod"
                            android:padding="15dp"
                            android:tag="kathy"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="start"
                                    android:src="@drawable/image" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:layout_marginTop="10dp"
                                    android:gravity="start"
                                    android:maxLines="1"
                                    android:text="Kathy"
                                    android:textColor="@color/white"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/william_layout_home"
                            android:layout_width="130dp"
                            android:layout_height="140dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/bg_gender_btn_clicked_registration_on_board"
                            android:onClick="HomeStoryClickedMethod"
                            android:padding="15dp"
                            android:tag="william"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="start"
                                    android:src="@drawable/image" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:layout_marginTop="10dp"
                                    android:gravity="start"
                                    android:maxLines="1"
                                    android:text="William"
                                    android:textColor="@color/white"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/sam_layout_home"
                            android:layout_width="130dp"
                            android:layout_height="140dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/bg_gender_btn_clicked_registration_on_board"
                            android:onClick="HomeStoryClickedMethod"
                            android:padding="15dp"
                            android:tag="sam"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="start"
                                    android:src="@drawable/image" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:layout_marginTop="10dp"
                                    android:gravity="start"
                                    android:maxLines="1"
                                    android:text="Sam"
                                    android:textColor="@color/white"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/alex_layout_home"
                            android:layout_width="130dp"
                            android:layout_height="140dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/bg_gender_btn_clicked_registration_on_board"
                            android:onClick="HomeStoryClickedMethod"
                            android:padding="15dp"
                            android:tag="alex"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="start"
                                    android:src="@drawable/image" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:layout_marginTop="10dp"
                                    android:gravity="start"
                                    android:maxLines="1"
                                    android:text="Alex"
                                    android:textColor="@color/white"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </RelativeLayout>

                    </LinearLayout>

                </HorizontalScrollView>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/recent_chats_layout_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="People "
                        android:textColor="@color/darkSkyBlue"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="in your chat"
                        android:textColor="@color/black"
                        android:textSize="22sp" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/incomplete_chats_list_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
