<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/image"
                    android:layout_alignParentLeft="true"/>

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/image"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <LinearLayout
                android:gravity="start"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hey there, "/>

                <TextView
                    android:textSize="25sp"
                    android:textStyle="normal|bold|italic"
                    android:textColor="@color/darkSkyBlue"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Moutamid!"
                    android:maxLines="1"/>

            </LinearLayout>

            <RelativeLayout
                android:background="@drawable/bg_gender_btn_unclicked_registration_on_board"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/wewe"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/image"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toLeftOf="@+id/qwqw"
                    android:layout_toRightOf="@+id/wewe"
                    android:layout_centerVertical="true">

                    <TextView
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lisa"
                        android:maxLines="1"/>

                    <TextView
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:textColor="@color/darkerGrey"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Begin where you left of"
                        android:maxLines="1"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/qwqw"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/image"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <LinearLayout
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="23sp"
                        android:textStyle="bold"
                        android:textColor="@color/darkSkyBlue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="People "/>

                    <TextView
                        android:textSize="23sp"
                        android:textColor="@color/black"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="in your chat"
                        android:maxLines="1"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/incomplete_chats_list_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <LinearLayout
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="23sp"
                        android:textStyle="bold"
                        android:textColor="@color/darkSkyBlue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stories "/>

                    <TextView
                        android:textSize="23sp"
                        android:textColor="@color/black"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="for you to choose"
                        android:maxLines="1"/>

                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <LinearLayout
                        android:gravity="start"
                        android:layout_gravity="start"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Button
                            android:background="@drawable/bg_gender_btn_unclicked_registration_on_board"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Funny"/>

                        <Button
                            android:textColor="@color/black"
                            android:background="@drawable/bg_gender_btn_unclicked_registration_on_board"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Horror"/>

                        <Button
                            android:background="@drawable/bg_gender_btn_unclicked_registration_on_board"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Suspense"/>

                        <Button
                            android:background="@drawable/bg_gender_btn_unclicked_registration_on_board"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Alien"/>

                        <Button
                            android:background="@drawable/bg_gender_btn_unclicked_registration_on_board"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Alien"/>

                        <Button
                            android:id="@+id/showAllStoriesBtnChatList"
                            android:background="@drawable/bg_gender_btn_unclicked_registration_on_board"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Show All"/>

                    </LinearLayout>

                </HorizontalScrollView>

                <androidx.recyclerview.widget.RecyclerView
                    android:orientation="horizontal"
                    android:id="@+id/stories_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
